@model drankshop.Models.DrankViewModel 
@{
    ViewData["Title"] = "Bewerken";
    Layout = "AdminLayout";
}



<form asp-action="Bewerken" asp-route-id="@ViewBag.Drank.Id" method="post">
    <div class="form-group">
        <label for="exampleInputPassword1">Naam</label>
        <input type="text" required="required" name="naam" class="form-control" id="exampleInputPassword1" placeholder="Naam" value="@ViewBag.Drank.Naam">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Prijs</label>
        <input required="required" name="Prijs" class="form-control" id="exampleInputPassword1" placeholder="Prijs" value="@ViewBag.Drank.Prijs">
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <a style="background-color: #7B42FA; color: white" class="btn btn" data-toggle="modal" data-target="#exampleModalCenter">Bewerken</a>
    <button style="background-color: #7B42FA; color: white" class="btn btn" asp-route-id="@ViewBag.Drank.Id" asp-controller="Drank" asp-action="Verwijderen">Verwijderen</button>
    <!-- Modal -->

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Bewerken</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Weet je zeker dat je deze drank wilt bewerken?
                </div>
                <div class="modal-footer">
                    <button type="button" style="background-color: #5020BB; color: white" class="btn btn" data-dismiss="modal">Sluiten</button>
                    <input type="submit" style="background-color: #7B42FA; color: white" class="btn btn" value="Bewerken">
                </div>
            </div>
        </div>
    </div>
</form>
<br />
<div>
    <a asp-action="Index">Terug naar dranken</a>
</div>
