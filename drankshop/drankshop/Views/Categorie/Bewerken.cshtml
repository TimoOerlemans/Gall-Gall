@*@model LOGIC.Categorie*@
@{
    ViewData["Title"] = "Bewerken";
    Layout = "AdminLayout";
}    

<h1>Bewerken categorie</h1>

<form asp-action="Bewerken" asp-route-id="@ViewBag.Categorie.Id" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="exampleInputPassword1">Naam</label>
                <input type="text" required="required" name="naam" class="form-control" id="exampleInputPassword1" placeholder="Naam" value="@ViewBag.Categorie.Naam" />
            </div>
        </div>
    </div>
    <a style="background-color: #7B42FA; color: white" class="btn btn" data-toggle="modal" data-target="#exampleModalCenter">Bewerken</a>

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Bewerken</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Weet je zeker dat je deze categorie wilt bewerken?
                </div>
                <div class="modal-footer">
                    <button type="button" style="background-color: blue; color: white" class="btn btn" data-dismiss="modal">Sluiten</button>
                    <input type="submit" style="background-color: blue; color: white" class="btn btn" value="Bewerken">
                </div>
            </div>
        </div>
    </div>
</form>
